<h3>username: <%= comment.username %></h3>
<p>comment: <%= comment.content %></p>
<% if current_user.profile == comment.profile %>
  <h5><%= link_to 'edit', edit_post_comment_path(@post, comment) %></h5>
  <h5><%= link_to 'delete', post_comment_path(@post, comment),
                  method: :delete,
                  data: {confirm: 'are you sure?'} %></h5>
<% end %>
